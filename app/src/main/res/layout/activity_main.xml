<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Switch
            android:text="回声消除开关"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audioSwitch"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="25dp" />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/recode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录音"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/audioSwitch" />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/stopRecode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止录音"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recode"
    />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/recode"
            app:layout_constraintTop_toTopOf="@+id/recode"
            android:text="播放" />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/stopPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止播放"
            app:layout_constraintStart_toEndOf="@+id/stopRecode"
            app:layout_constraintTop_toTopOf="@+id/stopRecode"
    />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/apiSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API支持"
            app:layout_constraintStart_toEndOf="@+id/stopPlay"
            app:layout_constraintTop_toTopOf="@+id/stopPlay"
            />




</android.support.constraint.ConstraintLayout>